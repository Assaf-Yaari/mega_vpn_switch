{
    "name": "NordSwitch",
    "version": "1.0",
    "description": "Switch location uppon reaching downlad quota ",
    "permissions": [
      "activeTab",
      "downloads",
      "tabs",
      "scripting",
      "webRequest",
      "storage"
    ],
    "host_permissions": ["<all_urls>"],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "img/icon16.png",
        "32": "img/icon32.png",
        "48": "img/icon48.png"
      }
    },
    "background": {
      "service_worker": "background.js"
    },
    "manifest_version": 3
  }